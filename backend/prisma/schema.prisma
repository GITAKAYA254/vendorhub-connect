generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  vendor
  customer
}

enum JobStatus {
  open
  in_progress
  completed
}

enum TaskStatus {
  pending
  in_progress
  completed
}

enum TaskPriority {
  low
  medium
  high
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  passwordHash String
  role         UserRole       @default(customer)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  products     Product[]
  jobs         Job[]
  tasks        Task[]
  vendorProfile VendorProfile?
}

model VendorProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  companyName String
  description String
  website     String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Product {
  id          String   @id @default(cuid())
  vendorId    String
  title       String
  description String
  price       Decimal  @db.Decimal(10, 2)
  images      String[] @default([])
  category    String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  vendor User @relation(fields: [vendorId], references: [id])
}

model Job {
  id          String    @id @default(cuid())
  vendorId    String
  title       String
  description String
  budget      Decimal   @db.Decimal(10, 2)
  category    String
  status      JobStatus @default(open)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  vendor User @relation(fields: [vendorId], references: [id])
}

model Task {
  id          String       @id @default(cuid())
  vendorId    String
  title       String
  description String
  price       Decimal      @db.Decimal(10, 2)
  category    String
  status      TaskStatus   @default(pending)
  priority    TaskPriority @default(medium)
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  vendor User @relation(fields: [vendorId], references: [id])
}

