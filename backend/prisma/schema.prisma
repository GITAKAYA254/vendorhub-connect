generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  vendor
  customer
}

enum JobStatus {
  open
  in_progress
  completed
}

enum TaskStatus {
  pending
  in_progress
  completed
}

enum TaskPriority {
  low
  medium
  high
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  passwordHash String
  role         UserRole       @default(customer)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  products     Product[]
  jobs         Job[]
  tasks        Task[]
  vendorProfile VendorProfile?
  productReviews ProductReview[]
  vendorReviewsGiven VendorReview[] @relation("VendorReviewsGiven")
  vendorReviewsReceived VendorReview[] @relation("VendorReviewsReceived")
}

model VendorProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  companyName String
  description String
  website     String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Product {
  id          String   @id @default(cuid())
  vendorId    String
  title       String
  description String
  price       Decimal  @db.Decimal(10, 2)
  images      String[] @default([])
  category    String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  vendor User @relation(fields: [vendorId], references: [id])
  tags   String[] @default([])
  
  productImages ProductImage[]
  reviews       ProductReview[]
}

model Job {
  id          String    @id @default(cuid())
  vendorId    String
  title       String
  description String
  budget      Decimal   @db.Decimal(10, 2)
  category    String
  status      JobStatus @default(open)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  vendor User @relation(fields: [vendorId], references: [id])
}

model Task {
  id          String       @id @default(cuid())
  vendorId    String
  title       String
  description String
  price       Decimal      @db.Decimal(10, 2)
  category    String
  status      TaskStatus   @default(pending)
  priority    TaskPriority @default(medium)
  dueDate     DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  vendor User @relation(fields: [vendorId], references: [id])
}

model Payment {
  id            String   @id @default(cuid())
  transactionId String?  @unique
  provider      String   // mpesa, card
  amount        Decimal  @db.Decimal(10, 2)
  currency      String   @default("KES")
  status        String   // pending, completed, failed
  reference     String
  metadata      Json?
  
  orderPaymentLink OrderPaymentLink?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model OrderPaymentLink {
  id        String   @id @default(cuid())
  paymentId String   @unique
  orderId   String
  
  payment   Payment  @relation(fields: [paymentId], references: [id])
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  url       String
  publicId  String?
  isPrimary Boolean  @default(false)
  createdAt DateTime @default(now())
  
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductReview {
  id        String   @id @default(cuid())
  productId String
  userId    String
  rating    Int
  comment   String?
  isHidden  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  
  @@unique([productId, userId])
}

model VendorReview {
  id        String   @id @default(cuid())
  vendorId  String
  userId    String
  rating    Int
  comment   String?
  isHidden  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  vendor    User     @relation("VendorReviewsReceived", fields: [vendorId], references: [id])
  reviewer  User     @relation("VendorReviewsGiven", fields: [userId], references: [id])
  
  @@unique([vendorId, userId])
}

